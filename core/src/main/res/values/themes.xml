<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="MyApplicationTheme" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->

        <item name="colorPrimary">@color/p40</item>
        <item name="colorOnPrimary">@color/p100</item>
        <item name="colorPrimaryContainer">@color/p90</item>
        <item name="colorSecondary">@color/s40</item>
        <item name="colorTertiary">@color/t40</item>
        <item name="backgroundColor">#f6fafe</item>



        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <style name="DefaultButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingHorizontal">16dp</item>
    </style>
    <style name="MyDefaultMaterialButton" parent="DefaultButton">
        <item name="cornerRadius">8dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingHorizontal">16dp</item>
    </style>
    <style name="BaseNoBgButton" parent="Widget.Material3.Button.TextButton">
        <item name="cornerRadius">8dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingHorizontal">16dp</item>
    </style>
</resources>